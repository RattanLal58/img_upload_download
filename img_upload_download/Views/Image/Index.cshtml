@{
    ViewData["Title"] = "Uploaded Images";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>@image.Id</td>
                <td>@image.FileName</td>
                <td>
                    <a href="@Url.Action("Download", "Image", new { id = image.Id })" class="btn btn-success">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Upload", "Image")" class="btn btn-primary">Upload New Image</a>
